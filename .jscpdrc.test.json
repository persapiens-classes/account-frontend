{
  "threshold": 25,
  "reporters": ["console", "json", "html"],
  "absolute": true,
  "gitignore": true,
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.angular/**",
    "**/coverage/**",
    "**/!(*.test|*.spec).ts",
    "**/*.css",
    "**/*.html"
